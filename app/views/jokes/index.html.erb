<%= form_for [@joke] do |f| %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <%= f.submit %>
<% end %>
<br>

<% if @jokes.any? %>
  
  <% @jokes.each do |joke| %>

    <%= joke.text %>
    <%= joke.user.email %>
    <% unless @user.starred? joke %>
      <%= form_for [joke, @star] do |f| %>
        <%= f.select :rating, (1..5) %>
        <%= f.submit 'Star' %>
      <% end %>
    <% end %>
    <%= joke.average_rating %>
    <% if @user.owns_joke? joke %>
      <%= link_to "Delete", joke_path(joke), method: :delete %>
    <% end %>
    <br>
    <br>

  <% end %>

<% end %>

<% @users.each do |user| %>
  
  <%= user.email %>
  <%= user.score %>
  <br>

<% end %>
